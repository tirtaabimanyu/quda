= form_for @log do |f|
  - if @log.errors.any?
    #error_explanation
      %h2= "#{pluralize(@log.errors.count, "error")} prohibited this log from being saved:"
      %ul
        - @log.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :in
    = f.datetime_select :in
  .field
    = f.label :out
    = f.datetime_select :out
  .actions
    = f.submit 'Save'
